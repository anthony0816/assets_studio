enum USER_ROLL{
  administrador
  cliente
}

model user {
  id Int @id @default(autoincrement()) 
  longName String
  username String @unique
  password String
  email String @unique
  roll USER_ROLL @default(cliente)
  providerId String @default("local")
}

model Asset{
  id Int @id @default(autoincrement())
  likes Int @default(0)
  reports Int @default(0)
  createdAt DateTime @default(now())
  src String
  user_id String
  user_providerId String
}

model Report{
id Int @id @default(autoincrement())
user_id String
description String 
}